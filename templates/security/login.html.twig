{% extends 'base.html.twig' %}

{% block title %}<title>Connexion</title>{% endblock %}

{% block body %}
<form method="post" class="formLogin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="loginForm">
    <h1 class="connexion">Connectez-vous</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password"  required>
     <div class="checkbox mb-3">
       </div>
      <button class="btn btn-lg btn-primary loginButton" type="submit">Connexion !</button>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">


</form>
{% endblock %}
