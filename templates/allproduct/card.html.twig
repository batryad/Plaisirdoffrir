                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_edit', {'id': product.id}) }}" class="card-link">edit</a>
                <a href="{{ path('product_new') }}">Create new</a>
                {% endif %}

            </div>
    </div>


